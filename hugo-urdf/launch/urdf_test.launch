<launch>
	<param name="robot_description" textfile="$(find hugo-urdf)/urdf/urdf-01.xml"/>

	<node pkg="tf" type="static_transform_publisher" name="map_to_base_link" args="0 0 0 0 0 0 /map /base_link 100"/>

	<node pkg="tf" type="static_transform_publisher" name="base_link_to_right_drive_wheel" args="0 0 0 0 0 0 /base_link /right_drive_wheel 100"/>

	<node pkg="tf" type="static_transform_publisher" name="base_link_to_left_drive_wheel" args="0 0 0 0 0 0 /base_link /left_drive_wheel 100"/>

	<node pkg="tf" type="static_transform_publisher" name="base_link_to_right_caster_wheel" args="0 0 0 0 0 0 /base_link /right_caster_wheel 100"/>

	<node pkg="tf" type="static_transform_publisher" name="base_link_to_left_caster_wheel" args="0 0 0 0 0 0 /base_link /left_caster_wheel 100"/>

</launch>